<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/countryCard"
    android:orientation="vertical"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/main_margin"
        android:paddingEnd="@dimen/main_margin"
        android:paddingTop="@dimen/half_main_margin"
        android:paddingBottom="@dimen/half_main_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emojiText"
            android:textSize="@dimen/title_text_size"/>

        <TextView
            android:id="@+id/nameText"
            style="@style/NormalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin" />

    </LinearLayout>
</androidx.cardview.widget.CardView>